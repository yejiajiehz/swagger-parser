{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "outDir": "dist",
    "noImplicitAny": true,
    "sourceMap": false,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
